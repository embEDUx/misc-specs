#! /bin/bash -e

#####################
# Configuration     # 							     
#####################

### Outputs
DST_IMG="misc.tar.gz"
DST_DIR="output"
DST_PRE="$(date '+%Y%m%d')_$(date '+%H-M-S')_3.15.5"

#####################
# Script            #
#####################

### Pack files into archive

if [ "$(ls | grep -v build)" ]
	then
        tar --exclude build,.git,${DST_IMG} -czf ${DST_IMG} *
fi

### Copy files to output
mkdir ${DST_DIR}

if [ -e ${DST_IMG} ]
then cp ${DST_IMG} ${DST_DIR}/${DST_PRE}_${DST_IMG}
fi

### Clean up
rm ${DST_IMG}

